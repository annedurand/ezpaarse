#!/bin/bash -e
#
# setup ezpaarse env variables
#

EZPAARSE_PATH="$( cd "$( dirname "${BASH_SOURCE[0]}" )/.." && pwd )"

export NVM_DIR="$EZPAARSE_PATH/build/nvm"
. "$NVM_DIR/nvm.sh"

# list of paths to check in $PATH
declare -a EZ_PATHS=(
  "/usr/local/bin"
  "/usr/bin"
  "/bin"
  "$EZPAARSE_PATH/bin"
  "$EZPAARSE_PATH/node_modules/.bin"
)

for i in "${EZ_PATHS[@]}"
do
  if ! [[ $PATH =~ (^|:)"$i"($|:) ]];then
    export PATH="$PATH:$i"
  fi
done
